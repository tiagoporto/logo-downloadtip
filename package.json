{
  "name": "logo-downloadtip-root",
  "private": true,
  "type": "module",
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": ">=24",
      "onFail": "error"
    },
    "packageManager": {
      "name": "pnpm",
      "version": ">=10",
      "onFail": "error"
    }
  },
  "packageManager": "pnpm@10.23.0",
  "scripts": {
    "postinstall": "$CI = true || (dependabot-config && editor-config)",
    "prepare": "husky",
    "generate": "stencil generate",
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "check-update": "pnpm update --interactive --latest",
    "checks": "pnpm format:check && pnpm typecheck && pnpm lint && pnpm lint:styles",
    "check-docs": "remark --frail . --ext md,markdown,mdx",
    "format:check": "prettier --check --ignore-unknown \"**/*\"",
    "format": "pnpm format:check --write",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --max-warnings 0",
    "lint:fix": "pnpm lint --write",
    "lint:styles": "stylelint \"**/*.{css,scss}\"",
    "lint:styles:fix": "pnpm lint:styles --fix"
  },
  "dependencies": {
    "logo-downloadtip": "workspace:*"
  },
  "devDependencies": {
    "@anolilab/multi-semantic-release": "^3.0.0",
    "@anolilab/semantic-release-pnpm": "^3.0.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@open-wc/testing": "^4.0.0",
    "@stencil/core": "^4.38.3",
    "@tiagoporto/dependabot-config": "^2.5.0",
    "@tiagoporto/editor-config": "^2.1.0",
    "@tiagoporto/eslint-config": "^6.3.0",
    "@tiagoporto/prettier-config": "^2.1.0",
    "@tiagoporto/remark-config": "^1.11.0",
    "@tiagoporto/stylelint-config": "^1.2.0",
    "@vitest/eslint-plugin": "^1.4.3",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1",
    "semantic-release": "^25.0.2",
    "stylelint": "^16.25.0",
    "tippy.js": "^6.3.7",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13",
    "workbox-build": "^7.4.0"
  },
  "pnpm": {
    "overrides": {
      "conventional-changelog-conventionalcommits": ">=8.0.0"
    }
  }
}
